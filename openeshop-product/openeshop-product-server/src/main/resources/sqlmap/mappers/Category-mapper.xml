<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.anttribe.openeshop.product.domain.Category">
	<cache readOnly="true" />
	<resultMap id="Category-resultMap" type="org.anttribe.openeshop.product.domain.Category">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="ordinal" column="ordinal" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<!-- where -->
	<sql id="where">
		<where>
			<if test="id != null and id != ''">
				AND t.id = #{id}
			</if>
			<if test="name != null and name != ''">
				AND t.name like concat('%', '${name}', '$')
			</if>
			<if test="parent != null">
				AND t.parent_id = #{parent}
			</if>
		</where>
	</sql>

	<!-- insert: 保存数据 -->
	<insert id="insert" parameterType="org.anttribe.openeshop.product.domain.Category">
        <![CDATA[
        ]]>
	</insert>

	<!-- update: 更新数据 -->
	<update id="update" parameterType="org.anttribe.openeshop.product.domain.Category">
	</update>

	<!-- queryById: 根据id查询数据 -->
	<select id="queryById" resultMap="Category-resultMap"
		parameterType="map">
		<![CDATA[
		]]>
	</select>

	<!-- queryByCriteria: 根据条件查询数据 -->
	<select id="queryByCriteria" resultMap="Category-resultMap"
		parameterType="map">
		<![CDATA[
		    SELECT id, name, ordinal, parent_id, create_time, update_time 
		    FROM oes_good_t_category_info t
		]]>
		<include refid="where" />
		<![CDATA[
		    ORDER BY ordinal, create_time desc, update_time
		]]>
	</select>

</mapper>